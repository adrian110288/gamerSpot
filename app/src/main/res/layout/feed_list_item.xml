<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/image_holder"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="50dp">

        <ImageView
            android:id="@+id/platform_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_holder"
        android:background="@android:color/white"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/feed_creator"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/APP_TEXT_COLOR"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feed_creator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/feed_date"
            android:singleLine="true"
            android:textColor="@color/FEED_LIST_ITEM_CREATOR"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feed_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feed_creator"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/APP_TEXT_COLOR"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBaseline="@id/image_holder"
        android:layout_toRightOf="@id/image_holder"
        android:background="#E6E6E6" />

</RelativeLayout>