<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:id="@+id/helperView"
        android:layout_width="wrap_content"
        android:minWidth="90dp"
        android:layout_height="20dp"
        android:background="@color/PLATFORM_PC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/feed_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:paddingRight="5dp"
            android:layout_marginLeft="15dp"
            />

        </RelativeLayout>

    <TextView
        android:id="@+id/feed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/helperView"
        android:layout_alignParentRight="true"
        android:textColor="@color/APP_TEXT_COLOR"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/feed_creator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/FEED_LIST_ITEM_CREATOR"
        android:layout_below="@+id/helperView"
        />

    <TextView
        android:id="@+id/feed_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"

        android:textColor="@color/APP_TEXT_COLOR"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/feed_creator"
        />

</RelativeLayout>